.about__columns {
  display: flex;
  padding: 140px 0 260px;
}

.about__user-text {
  color: rgba($text-color, .5);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.about__user {
  margin-right: 5%;
}

.about__desc {
  font-weight: 600;
  margin-bottom: 25px;
}

.about__title {
  font-weight: 700;
  font-size: 36px;
  margin-bottom: 36px;
  color: $text-color;
}

.about__ps {
  font-style: italic;
  margin-bottom: 50px;
}
